// Blocking.pde
// -*- mode: C++ -*-
//
// Shows how to use the blocking call runToNewPosition
// Which sets a new target position and then waits until the stepper has 
// achieved it.
//
// Copyright (C) 2009 Mike McCauley
// $Id: Blocking.pde,v 1.1 2011/01/05 01:51:01 mikem Exp mikem $

#include <AccelStepper.h>

// Define a stepper and the pins it will use
AccelStepper stepper(1, 7, 6); // Defaults to AccelStepper::FULL4WIRE (4 pins) on 2, 3, 4, 5

void setup()
{  
    stepper.setMaxSpeed(3000.0);
    stepper.setAcceleration(3000.0);
}

void loop()
{    
    delay(500);
    stepper.runToNewPosition(0);
    delay(500);
    stepper.runToNewPosition(400);
    delay(500);
    stepper.runToNewPosition(1200);
    delay(500);
    stepper.runToNewPosition(2400);
}
